<Window x:Class="cafeha.DrinkManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý đồ uống" Height="450" Width="800">
    <Grid Margin="10">
        <!-- Danh sách đồ uống -->
        <DataGrid x:Name="DrinksDataGrid" AutoGenerateColumns="False" HorizontalAlignment="Left" VerticalAlignment="Top" Width="500" Height="392"
                  SelectionChanged="DrinksDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tên" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Giá" Binding="{Binding Price}" Width="100"/>
                <DataGridTextColumn Header="Loại" Binding="{Binding Category}" Width="100"/>
                <DataGridTextColumn Header="Số lượng" Binding="{Binding Category}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Các nút thao tác -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="520,0,0,0" Width="200">
            <Button Content="Thêm đồ uống" Height="30" Margin="0,0,0,10" Click="AddDrink_Click"/>
            <Button Content="Sửa đồ uống" Height="30" Margin="0,0,0,10" Click="EditDrink_Click"/>
            <Button Content="Xóa đồ uống" Height="30" Margin="0,0,0,10" Click="DeleteDrink_Click"/>
        </StackPanel>
    </Grid>
</Window>
