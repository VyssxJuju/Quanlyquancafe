<Window x:Class="cafeha.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng ký" Height="250" Width="400">
    <Grid>
        <Label Content="Tên đăng nhập" VerticalAlignment="Top" Margin="0,26,306,0" Height="30" HorizontalAlignment="Right" Width="89"/>
        <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="270" Margin="105,20,0,0" Height="36"/>

        <Label Content="Mật khẩu" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,95,0,0" Height="29" Width="79"/>
        <PasswordBox x:Name="PasswordTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="270" Margin="105,88,0,0" Height="36"/>

        <Button Content="Đăng ký" HorizontalAlignment="Left" VerticalAlignment="Top" Width="94" Margin="141,171,0,0" Click="RegisterButton_Click" Height="27"/>
        <Button Content="Trở lại Đăng nhập" HorizontalAlignment="Left" VerticalAlignment="Top" Width="94" Margin="241,171,0,0" Click="SwitchToLogin_Click" Height="27"/>
    </Grid>
</Window>
