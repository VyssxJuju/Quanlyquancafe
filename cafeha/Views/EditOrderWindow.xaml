<Window x:Class="cafeha.Views.EditOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chỉnh Sửa Đơn Hàng" Height="400" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <!-- ComboBox để chọn đơn hàng -->
            <TextBlock Text="Chọn Đơn Hàng" Margin="0,10"/>
            <ComboBox x:Name="OrderComboBox" Margin="0,5" Height="30" SelectionChanged="OrderComboBox_SelectionChanged"/>

            <!-- Hiển thị thông tin đơn hàng -->
            <TextBlock Text="Số Lượng" Margin="0,10"/>
            <TextBox x:Name="QuantityTextBox" Margin="0,5" Height="30"/>

            <TextBlock Text="Tổng Tiền" Margin="0,10"/>
            <TextBox x:Name="TotalPriceTextBox" Margin="0,5" Height="30" IsReadOnly="True"/>

            <!-- Nút Lưu -->
            <Button Content="Lưu" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="40" Margin="10,20" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
