<Window x:Class="cafeha.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản Lý Đơn Hàng" Height="450" Width="800">
    <Grid Margin="20">
        <DataGrid x:Name="OrderDataGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,60" />

        <!-- Nút Thêm Đơn Hàng -->
        <Button Content="Thêm Đơn Hàng" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Height="40" Click="AddOrder_Click" />
        <!-- Nút Sửa Đơn Hàng -->
        <Button Content="Sửa Đơn Hàng" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="100" Height="40" Click="EditOrder_Click" />
        <!-- Nút Xóa Đơn Hàng -->
        <Button Content="Xóa Đơn Hàng" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Height="40" Click="DeleteOrder_Click" />
    </Grid>
</Window>
