<Window x:Class="cafeha.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thống kê" Height="600" Width="1000">
    <Grid>
        <!-- Grid Rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Phần lựa chọn loại thống kê -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10">
            <Label Content="Chọn loại thống kê:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox x:Name="StatisticsComboBox" Width="200">
                <ComboBoxItem Content="Doanh thu"/>
                <ComboBoxItem Content="Số lượng đơn hàng"/>
                <ComboBoxItem Content="Số lượng khách hàng"/>
            </ComboBox>

            <Button Content="Xem thống kê" Height="30" Width="100" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Hiển thị biểu đồ thống kê -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="18" FontWeight="Bold" Text="Biểu đồ thống kê"/>
            <!-- Biểu đồ sẽ được thêm sau khi chọn thống kê -->
            <Image x:Name="StatisticsChartImage" Width="800" Height="400" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
